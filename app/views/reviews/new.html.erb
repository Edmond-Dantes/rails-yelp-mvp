<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating do %>
          <%= f.select :rating, Review::RATINGS %>
        <% end %>
        <%= f.submit "Add this review", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
